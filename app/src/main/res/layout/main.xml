<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#2C2C2C">

    <TextView
        android:id="@+id/packet_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/packet_info"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#00FF00"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/packet_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/packet_data_goes_here"
        android:textSize="16sp"
        android:textColor="#FFD700"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/misc_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/misc_info"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF6347"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/misc_info_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miscellaneous information goes here"
        android:textSize="16sp"
        android:textColor="#FF4500"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/ip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_ip_address"
        android:textSize="18sp"
        android:textColor="#87CEFA"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/ip_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autofillHints=""
        android:gravity="center_horizontal"
        android:hint="@string/ip_address"
        android:inputType="text"
        android:textColor="#FFFFFF" />

</LinearLayout>
